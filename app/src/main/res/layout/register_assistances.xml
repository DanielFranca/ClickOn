<?xml version="1.0" encoding="utf-8" ?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3b69fa"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="#3b69fa"
    android:padding="24dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="360dp"
        android:layout_height="91dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="ClickOnDevice"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/editEmailLoginAssistance"
        app:layout_constraintEnd_toEndOf="@+id/editEmailLoginAssistance"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/editEmailLoginAssistance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <EditText
        android:id="@+id/editNameRegisterAssistance"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/arima_madurai_bold"
        android:hint="Nome da Assistência"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteY="273dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="361dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/arima_madurai_bold"
        android:hint="Horário de funcionamento (Início) "
        android:inputType="time"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/strength_level_indicator"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specialChar_txt"
        app:layout_editor_absoluteY="273dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTimefinal"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/arima_madurai_bold"
        android:hint="Horário de funcionamento (Término) "
        android:inputType="time"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/editTime"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTime"
        app:layout_editor_absoluteY="273dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editEmailLoginAssistance"
        android:layout_width="360dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/arima_madurai_bold"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameRegisterAssistance"
        app:layout_editor_absoluteY="273dp" />

    <EditText
        android:id="@+id/editCpfAssistance"
        android:layout_width="363dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/white"
        android:ems="18"
        android:fontFamily="@font/arima_madurai_bold"
        android:hint="CPF "
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailLoginAssistance" />

    <EditText
        android:id="@+id/editPasswordRegisterAssistance"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toBottomOf="@+id/editCpfAssistance"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/strength_level_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/editPasswordRegisterAssistance"
        app:layout_constraintTop_toBottomOf="@+id/editCpfAssistance" />

    <View
        android:id="@+id/strength_level_indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/strength_level_txt"
        app:layout_constraintStart_toStartOf="@+id/editPasswordRegisterAssistance"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordRegisterAssistance" />

    <ImageView
        android:id="@+id/lowerCase_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/strength_level_indicator"
        app:layout_constraintTop_toBottomOf="@+id/strength_level_indicator"
        app:srcCompat="@drawable/ic_checkmark" />

    <TextView
        android:id="@+id/lowerCase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="letras minúsculas"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/lowerCase_img"
        app:layout_constraintStart_toEndOf="@+id/lowerCase_img"
        app:layout_constraintTop_toTopOf="@+id/lowerCase_img" />

    <ImageView
        android:id="@+id/upperCase_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/lowerCase_img"
        app:layout_constraintTop_toBottomOf="@+id/lowerCase_img"
        app:srcCompat="@drawable/ic_checkmark" />

    <TextView
        android:id="@+id/upperCase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="letras maiúsculas"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/upperCase_img"
        app:layout_constraintStart_toEndOf="@+id/upperCase_img"
        app:layout_constraintTop_toTopOf="@+id/upperCase_img" />

    <ImageView
        android:id="@+id/digit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/upperCase_img"
        app:layout_constraintTop_toBottomOf="@+id/upperCase_img"
        app:srcCompat="@drawable/ic_checkmark" />

    <TextView
        android:id="@+id/digit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Digítos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/digit_img"
        app:layout_constraintStart_toEndOf="@+id/digit_img"
        app:layout_constraintTop_toTopOf="@+id/digit_img" />

    <ImageView
        android:id="@+id/specialChar_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/digit_img"
        app:layout_constraintTop_toBottomOf="@+id/digit_img"
        app:srcCompat="@drawable/ic_checkmark" />

    <TextView
        android:id="@+id/specialChar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="caracteres especiais"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/specialChar_img"
        app:layout_constraintStart_toEndOf="@+id/specialChar_img"
        app:layout_constraintTop_toTopOf="@+id/specialChar_img" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateCountAssistance"
        app:layout_constraintVertical_bias="1.0"
        app:layout_editor_absoluteY="517dp"
        tools:visibility="visible" />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/buttonCreateCountAssistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/arima_madurai_bold"
        android:text="Criar conta"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTimefinal"
        app:layout_constraintTop_toBottomOf="@+id/editTimefinal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arima_madurai_bold"
            android:text="Serviços prestados"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_celular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:buttonTint="@color/white"
            android:checked="false"
            android:fontFamily="@font/arima_madurai_bold"
            android:text="Manutenção de celulares"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_notebook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/white"
            android:checked="false"
            android:fontFamily="@font/arima_madurai_bold"
            android:text="Manutenção de Notebooks"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_tablets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/white"
            android:checked="false"
            android:fontFamily="@font/arima_madurai_bold"
            android:text="Manutenção de Tablets"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
